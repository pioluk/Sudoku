<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.RadioButton?>

<VBox fx:controller="org.comprog.SudokuLab5.UIController" xmlns:fx="http://javafx.com/fxml">
	<children>
	
		<Label id="titleLabel" text="Sudoku" />
		
		<FlowPane id="flowPane">
			<children>
				<RadioButton fx:id="easyModeButton" text="EASY" selected="true" />
				<RadioButton fx:id="mediumModeButton" text="MEDIUM" />
				<RadioButton fx:id="hardModeButton" text="HARD" />
			</children>
		</FlowPane>
	
		<GridPane fx:id="grid">
			<children>
			</children>
		</GridPane>
	
		<Button onAction="#onReloadButtonAction" fx:id="generateBoardButton" maxWidth="360" text="Generate board" />
		
	</children>
</VBox>

